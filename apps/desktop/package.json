{
  "name": "@squadx/desktop",
  "version": "0.5.3",
  "private": true,
  "description": "SquadX Live Desktop - Collaborative development with screen sharing",
  "author": "SquadX Team <hello@squadx.live>",
  "homepage": "https://squadx.live",
  "repository": {
    "type": "git",
    "url": "https://github.com/squadx/squadx-live.git"
  },
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "electron-vite dev -- --no-sandbox --ozone-platform-hint=auto --enable-wayland-ime --class=squadx-live",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "package": "electron-builder",
    "package:mac": "pnpm build && electron-builder --mac",
    "package:win": "pnpm build && electron-builder --win",
    "package:linux": "pnpm build && electron-builder --linux",
    "clean": "rm -rf dist out node_modules"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "dotenv": "^17.2.3",
    "linkify-react": "^4.3.2",
    "linkifyjs": "^4.3.2",
    "livekit-client": "^2.17.0",
    "zod": "^3.24.0",
    "zustand": "^4.5.0"
  },
  "optionalDependencies": {
    "@nut-tree-fork/node-mac-permissions": "^2.2.1"
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@squadx/shared-types": "workspace:*",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.10.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "electron-vite": "^2.3.0",
    "lucide-react": "^0.468.0",
    "postcss": "^8.4.49",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.7.0",
    "vite": "^5.4.0",
    "vitest": "^2.1.0"
  }
}
